<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<BorderPane
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="controller.PayrollController"
        style="-fx-background-color: #EED9C4;">

    <!-- ================= TOP ================= -->
    <top>
        <VBox spacing="12"
              style="-fx-background-color: #EED9C4;">
            <padding>
                <Insets top="12" right="16" bottom="12" left="16"/>
            </padding>

            <!-- ===== HEADER ===== -->
            <HBox alignment="CENTER_LEFT" spacing="12"
                  style="-fx-padding: 10;
                         -fx-background-color: #F8E4D0;
                         -fx-background-radius: 16;
                         -fx-border-color: #C19A6B;
                         -fx-border-radius: 16;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 3);">

                <ImageView fitHeight="70" fitWidth="110" preserveRatio="true">
                    <image>
                        <Image url="@../image/logo.jpeg"/>
                    </image>
                </ImageView>

                <Region HBox.hgrow="ALWAYS"/>

                <Label text="PAYROLL MANAGEMENT"
                       style="-fx-font-size: 22px;
                              -fx-font-weight: bold;
                              -fx-text-fill: #3E2723;"/>

                <Region HBox.hgrow="ALWAYS"/>

            </HBox>

            <!-- ===== FILTER BAR ===== -->
            <HBox spacing="14" alignment="CENTER_LEFT"
                  style="-fx-padding: 10;
                         -fx-background-color: #FAEBD7;
                         -fx-background-radius: 14;
                         -fx-border-color: #C19A6B;
                         -fx-border-radius: 14;">

                <Label text="Month:"
                       style="-fx-text-fill:#3E2723;
                              -fx-font-weight:900;"/>

                <ComboBox fx:id="cbMonth"
                          prefWidth="110"
                          style="-fx-background-color:#FFFDF8;
                                 -fx-border-color:#C19A6B;
                                 -fx-border-radius:10;
                                 -fx-background-radius:10;"/>

                <Label text="Year:"
                       style="-fx-text-fill:#3E2723;
                              -fx-font-weight:900;"/>

                <ComboBox fx:id="cbYear"
                          prefWidth="110"
                          style="-fx-background-color:#FFFDF8;
                                 -fx-border-color:#C19A6B;
                                 -fx-border-radius:10;
                                 -fx-background-radius:10;"/>
                <TextField fx:id="txtSearchEmployee"
           promptText="Search employee..."
           prefWidth="180"
           style="-fx-background-color:#FFFDF8;
                  -fx-border-color:#C19A6B;
                  -fx-border-radius:10;
                  -fx-background-radius:10;"/>

<ComboBox fx:id="cbStatus"
promptText="Status"
          prefWidth="130"
          style="-fx-background-color:#FFFDF8;
                 -fx-border-color:#C19A6B;
                 -fx-border-radius:10;
                 -fx-background-radius:10;"/>


                <Region HBox.hgrow="ALWAYS"/>

                <Button text="â† Home"
                        onAction="#goBack"
                        style="-fx-background-color:#5D3A24;
                               -fx-text-fill:white;
                               -fx-background-radius:10;
                               -fx-font-weight:bold;
                               -fx-cursor:hand;"/>
            </HBox>
        </VBox>
    </top>

    <!-- ================= CENTER ================= -->
    <center>
        <VBox style="-fx-background-color:#EED9C4;">
            <padding>
                <Insets top="6" right="16" bottom="10" left="16"/>
            </padding>

            <TableView fx:id="tblPayroll"
                       style="-fx-background-color:#FAEBD7;
                              -fx-border-color:#C19A6B;
                              -fx-border-radius:14;
                              -fx-background-radius:14;">

                <columns>
                    <TableColumn fx:id="colEmpId" text="Employee ID" prefWidth="110"/>
                    <TableColumn fx:id="colName" text="Full Name" prefWidth="180"/>
                    <TableColumn fx:id="colMonth" text="Month" prefWidth="70"/>
                    <TableColumn fx:id="colYear" text="Year" prefWidth="70"/>
                    <TableColumn fx:id="colWorkDays" text="Work Days" prefWidth="90"/>
                    <TableColumn fx:id="colBonus" text="Bonus" prefWidth="120"/>
                    <TableColumn fx:id="colPenalty" text="Penalty" prefWidth="120"/>
                    <TableColumn fx:id="colTotalSalary" text="Total Salary" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
