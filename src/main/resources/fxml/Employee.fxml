<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #EED9C4;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EmployeeController">

    <!-- ================= TOP : HEADER + FILTER ================= -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #EED9C4;">
            <padding>
                <Insets bottom="8" left="16" right="16" top="12" />
            </padding>

            <!-- ===== HEADER ===== -->
            <HBox alignment="CENTER_LEFT" spacing="12" style="-fx-padding: 10 14; -fx-background-color: white; -fx-background-radius: 14; -fx-border-color: #C19A6B; -fx-border-radius: 14; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 8, 0, 0, 2);">

                <ImageView fitHeight="56" fitWidth="90" preserveRatio="true">
                    <image>
                        <Image url="@../image/logo.jpeg" />
                    </image>
                </ImageView>

                <Region HBox.hgrow="ALWAYS" />

                <Label style="-fx-font-size: 20px;
                               -fx-font-weight: 900;
                               -fx-text-fill: #3E2723;" 
                       text="EMPLOYEE MANAGEMENT" />

                <Region HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- ===== FILTER ===== -->
            <HBox alignment="CENTER_LEFT" spacing="12" style="-fx-padding: 10 14;                          -fx-background-color: #FAEBD7;                          -fx-background-radius: 12;                          -fx-border-color: #C19A6B;                          -fx-border-radius: 12;">

                <Label style="-fx-text-fill: #3E2723;
                               -fx-font-weight: 800;" text="Status:" />

                <ComboBox fx:id="cbFilterStatus" prefHeight="28.0" prefWidth="399.0" style="-fx-background-color: #FFFDF8;                                  -fx-border-color: #C19A6B;                                  -fx-border-radius: 8;                                  -fx-background-radius: 8;" />

                <Button onAction="#handleLoad" prefHeight="34" style="-fx-background-color: #8B5E3C;                                -fx-text-fill: white;                                -fx-background-radius: 10;                                -fx-font-weight: 800;                                -fx-padding: 6 18;" text="Load" />
            </HBox>
        </VBox>
    </top>

    <!-- ================= CENTER : TABLE ================= -->
    <center>
        <VBox style="-fx-padding: 12 16;">
            <TableView fx:id="tblEmployee" style="-fx-background-color: #FAEBD7;                            -fx-border-color: #C19A6B;                            -fx-border-radius: 10;">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="80" text="ID" />
                    <TableColumn fx:id="colName" prefWidth="150" text="Full Name" />
                    <TableColumn fx:id="colDob" prefWidth="100" text="DOB" />
                    <TableColumn fx:id="colGender" prefWidth="80" text="Gender" />
                    <TableColumn fx:id="colPhone" prefWidth="110" text="Phone" />
                    <TableColumn fx:id="colEmail" prefWidth="160" text="Email" />
                    <TableColumn fx:id="colPosition" prefWidth="120" text="Position" />
                    <TableColumn fx:id="colStatus" prefWidth="90" text="Status" />
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- ================= BOTTOM : ACTION BUTTONS ================= -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="14" style="-fx-padding: 12 16;
                      -fx-background-color: #EED9C4;">

            <Button onAction="#handleAdd" prefHeight="36" style="-fx-background-color: #8B5E3C;                            -fx-text-fill: white;                            -fx-background-radius: 10;                            -fx-font-weight: 800;" text="Add" />

            <Button onAction="#handleUpdate" prefHeight="36" style="-fx-background-color: #8B5E3C;                            -fx-text-fill: white;                            -fx-background-radius: 10;                            -fx-font-weight: 800;" text="Update" />

            <Button onAction="#handleDeactivate" prefHeight="36" style="-fx-background-color: #5D3A24;                            -fx-text-fill: white;                            -fx-background-radius: 10;                            -fx-font-weight: 800;" text="Deactivate" />
        </HBox>
    </bottom>

</BorderPane>
