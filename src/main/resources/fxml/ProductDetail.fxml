<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="540.0" prefWidth="720.0"
            style="-fx-background-color: #F6F7FB;"
             xmlns="http://javafx.com/javafx"
xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.ProductDetailController">

    <!-- HEADER -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="64"
              style="-fx-background-color: white;
                     -fx-border-color: #E6E8EF;
                     -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets top="12" right="18" bottom="12" left="18"/>
            </padding>

            <Label text="Product Detail"
                   style="-fx-font-size: 20px;
                          -fx-font-weight: 900;
                          -fx-text-fill: #111827;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- (optional) nút close nếu dùng popup -->
            <!-- <Button text="✕"/> -->
        </HBox>
    </top>

    <!-- CENTER -->
    <center>
        <HBox spacing="18">
            <padding>
                <Insets top="18" right="18" bottom="18" left="18"/>
            </padding>

            <!-- IMAGE CARD -->
            <VBox alignment="CENTER"
                  prefWidth="260"
                  style="-fx-background-color: white;
                         -fx-background-radius: 18;
                         -fx-border-radius: 18;
                         -fx-border-color: #E6E8EF;">
                <padding>
                    <Insets top="14" right="14" bottom="14" left="14"/>
                </padding>

                <ImageView fx:id="ImageProduct"
                           fitHeight="220"
                           fitWidth="220"
                           preserveRatio="true"/>
            </VBox>

            <!-- INFO CARD -->
            <VBox spacing="14"
                  style="-fx-background-color: white;
                         -fx-background-radius: 18;
                         -fx-border-radius: 18;
                         -fx-border-color: #E6E8EF;">
                <padding>
                    <Insets top="16" right="16" bottom="16" left="16"/>
                </padding>

                <Label fx:id="NameDetail"
                       text="Product Name"
                       style="-fx-font-size: 22px;
                              -fx-font-weight: 900;
                              -fx-text-fill: #111827;"/>

                <Label fx:id="PriceDetail"
                       text="Price"
                       style="-fx-font-size: 16px;
                              -fx-font-weight: 800;
                              -fx-text-fill: #8B5E3C;"/>

                <GridPane hgap="12" vgap="12">
                    <Label text="Quantity:"
                           style="-fx-font-weight: 800;"/>
                    <Label fx:id="QuantityDetail"
                           text="number"
                           GridPane.columnIndex="1"
                           style="-fx-font-weight: 700;"/>

                    <Label text="Category:"
                           GridPane.rowIndex="1"
                           style="-fx-font-weight: 800;"/>
                    <Label fx:id="CategoryDetail"
                           text="Category"
                           GridPane.rowIndex="1"
                           GridPane.columnIndex="1"
                           style="-fx-font-weight: 700;"/>
                </GridPane>

                <HBox spacing="12" alignment="CENTER_LEFT">
                    <Label text="Pick quantity:"
                           style="-fx-font-weight: 800;"/>
                    <Spinner fx:id="SpinPick"/>
                </HBox>

                <VBox spacing="6">
                    <Label text="Description:"
                           style="-fx-font-weight: 800;"/>
                    <Label fx:id="DecriptionDetail"
                           wrapText="true"
                           prefWidth="380"
                           prefHeight="140"
                           style="-fx-text-fill: #374151;"/>
                </VBox>
            </VBox>
        </HBox>
    </center>

    <!-- FOOTER -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="12"
              style="-fx-background-color: white;
                     -fx-border-color: #E6E8EF;
                     -fx-border-width: 1 0 0 0;">
            <padding>
                <Insets top="12" right="18" bottom="12" left="18"/>
            </padding>

            <Button fx:id="SaveButton"
                    text="Save"
                    onAction="#handleSave"
                    prefHeight="38"
                    prefWidth="120"
                    style="-fx-background-color: #8B5E3C;
                           -fx-text-fill: white;
                           -fx-font-weight: 900;
                           -fx-background-radius: 12;"/>
        </HBox>
    </bottom>

</BorderPane>
