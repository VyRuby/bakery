<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700" prefWidth="1100"
            style="-fx-background-color: #F6EFE6;"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.CheckInController">

    <!-- ================= TOP ================= -->
    <top>
        <VBox spacing="12">
            <padding>
                <Insets top="16" right="18" bottom="12" left="18"/>
            </padding>

            <!-- ===== HEADER CARD (GIỐNG PAYROLL) ===== -->
            <HBox alignment="CENTER_LEFT" spacing="12"
                  style="-fx-background-color: rgba(255,255,255,0.92);
                         -fx-background-radius: 18;
                         -fx-border-radius: 18;
                         -fx-border-color: rgba(62,43,31,0.12);
                         -fx-border-width: 1;
                         -fx-padding: 12 14;">

                <ImageView fitHeight="48" fitWidth="180" preserveRatio="true">
                    <image>
                        <Image url="@../image/logo.jpeg"/>
                    </image>
                </ImageView>

                <VBox spacing="2">
                    <Label text="CHECK IN / CHECK OUT"
                           style="-fx-font-size: 18px;
                                  -fx-font-weight: 900;
                                  -fx-text-fill: #3E2B1F;"/>
                    <Label text="Employee Attendance Management"
                           style="-fx-font-size: 12px;
                                  -fx-text-fill: #7A6A5E;"/>
                </VBox>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- BACK TO HOME (ĐÚNG VỊ TRÍ PAYROLL) -->
                <Button text="← Back to Home"
                        onAction="#goBack"
                        prefHeight="36"
                        style="-fx-background-color: rgba(139,94,60,0.12);
                               -fx-text-fill: #3E2B1F;
                               -fx-font-weight: 900;
                               -fx-background-radius: 12;
                               -fx-padding: 0 14;
                               -fx-cursor: hand;"/>
            </HBox>

            <!-- ===== ACTION BAR CARD ===== -->
            <HBox alignment="CENTER_LEFT" spacing="12"
                  style="-fx-background-color: rgba(255,255,255,0.92);
                         -fx-background-radius: 18;
                         -fx-border-radius: 18;
                         -fx-border-color: rgba(62,43,31,0.12);
                         -fx-border-width: 1;
                         -fx-padding: 12 14;">

                <Label text="Employee"
                       style="-fx-font-weight: 900;
                              -fx-text-fill: #5B4B40;"/>

                <ComboBox fx:id="cbEmployee"
                          prefWidth="320"
                          promptText="Select employee (email - name)"
                          style="-fx-background-radius: 12;
                                 -fx-border-radius: 12;
                                 -fx-border-color: rgba(62,43,31,0.16);
                                 -fx-border-width: 1;
                                 -fx-padding: 0 12;"/>

                <Button text="Check In"
                        onAction="#handleCheckIn"
                        style="-fx-background-color: linear-gradient(to right, #8B5E3C, #A47148);
                               -fx-text-fill: white;
                               -fx-font-weight: 900;
                               -fx-background-radius: 12;
                               -fx-padding: 0 16;
                               -fx-cursor: hand;"/>

                <Button text="Check Out"
                        onAction="#handleCheckOut"
                        style="-fx-background-color: rgba(139,94,60,0.12);
                               -fx-text-fill: #3E2B1F;
                               -fx-font-weight: 900;
                               -fx-background-radius: 12;
                               -fx-padding: 0 16;
                               -fx-cursor: hand;"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Label text="Filter Date"
                       style="-fx-font-weight: 900;
                              -fx-text-fill: #5B4B40;"/>

                <DatePicker fx:id="dpDate"
                            onAction="#filterByDate"
                            style="-fx-background-radius: 12;
                                   -fx-border-radius: 12;
                                   -fx-border-color: rgba(62,43,31,0.16);
                                   -fx-border-width: 1;"/>
            </HBox>
        </VBox>
    </top>

    <!-- ================= CENTER ================= -->
    <center>
        <VBox>
            <padding>
                <Insets top="6" right="18" bottom="18" left="18"/>
            </padding>

            <!-- ===== TABLE CARD ===== -->
            <VBox spacing="10"
                  style="-fx-background-color: rgba(255,255,255,0.92);
                         -fx-background-radius: 18;
                         -fx-border-radius: 18;
                         -fx-border-color: rgba(62,43,31,0.12);
                         -fx-border-width: 1;">
                <padding>
                    <Insets top="14" right="14" bottom="14" left="14"/>
                </padding>

                <HBox alignment="CENTER_LEFT">
                    <Label text="Attendance Records"
                           style="-fx-font-size: 16px;
                                  -fx-font-weight: 900;
                                  -fx-text-fill: #3E2B1F;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label text="Check in / out late status"
                           style="-fx-font-size: 11px;
                                  -fx-text-fill: #7A6A5E;"/>
                </HBox>

                <TableView fx:id="tblCheckIn" prefHeight="520"
                           style="-fx-background-radius: 12;
                                  -fx-border-radius: 12;
                                  -fx-border-color: rgba(62,43,31,0.12);
                                  -fx-border-width: 1;">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="60" text="ID"/>
                        <TableColumn fx:id="colEmpId" prefWidth="140" text="Employee ID"/>
                        <TableColumn fx:id="colFullName" prefWidth="200" text="Full Name"/>
                        <TableColumn fx:id="colDate" prefWidth="120" text="Work Date"/>
                        <TableColumn fx:id="colIn" prefWidth="110" text="Check In"/>
                        <TableColumn fx:id="colOut" prefWidth="110" text="Check Out"/>
                        <TableColumn fx:id="colLate" prefWidth="80" text="Late"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>

</BorderPane>
