<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #EED9C4;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CheckInController">

    <!-- ================= TOP ================= -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #EED9C4;">
            <padding>
                <Insets bottom="8" left="16" right="16" top="12" />
            </padding>

            <!-- ===== HEADER ===== -->
            <HBox alignment="CENTER_LEFT" spacing="12" style="-fx-padding: 10 14; -fx-background-color: white; -fx-background-radius: 14; -fx-border-color: #C19A6B; -fx-border-radius: 14; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 8, 0, 0, 2);">

                <ImageView fitHeight="56" fitWidth="90" preserveRatio="true">
                    <image>
                        <Image url="@../image/logo.jpeg" />
                    </image>
                </ImageView>

                <Region HBox.hgrow="ALWAYS" />

                <Label style="-fx-font-size: 20px;                               -fx-font-weight: 900;                               -fx-text-fill: #3E2723;" text="EMPLOYEE CHECK IN / CHECK OUT" />

                <Region HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- ===== FORM ===== -->
            <HBox alignment="CENTER_LEFT" spacing="12" style="-fx-padding: 10 14;                          -fx-background-color: #FAEBD7;                          -fx-background-radius: 12;                          -fx-border-color: #C19A6B;                          -fx-border-radius: 12;">

                <Label style="-fx-text-fill: #3E2723;                               -fx-font-weight: 800;" text="Employee Email:" />

                <TextField fx:id="txtEmployeeId" prefWidth="260" promptText="Enter employee email..." style="-fx-background-color: #FFFDF8;                                   -fx-border-color: #C19A6B;                                   -fx-border-radius: 10;                                   -fx-background-radius: 10;                                   -fx-padding: 6 10;" />

                <Region HBox.hgrow="ALWAYS" />

                <Button onAction="#handleCheckIn" prefHeight="34" style="-fx-background-color: #8B5E3C;                                -fx-text-fill: white;                                -fx-font-weight: 800;                                -fx-background-radius: 10;                                -fx-padding: 6 18;" text="Check In" />

                <Button onAction="#handleCheckOut" prefHeight="34" style="-fx-background-color: #C19A6B;                                -fx-text-fill: white;                                -fx-font-weight: 800;                                -fx-background-radius: 10;                                -fx-padding: 6 18;" text="Check Out" />
            </HBox>

        </VBox>
    </top>

    <!-- ================= CENTER ================= -->
    <center>
        <VBox style="-fx-padding: 12 16;">
            <TableView fx:id="tblCheckIn" style="-fx-background-color: #FAEBD7;                               -fx-border-color: #C19A6B;                               -fx-border-radius: 10;                               -fx-background-radius: 10;">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="60" text="ID" />
                    <TableColumn fx:id="colEmpId" prefWidth="160" text="Employee ID" />
                    <TableColumn fx:id="colDate" prefWidth="150" text="Work Date" />
                    <TableColumn fx:id="colIn" prefWidth="130" text="Check In" />
                    <TableColumn fx:id="colOut" prefWidth="130" text="Check Out" />
                    <TableColumn fx:id="colLate" prefWidth="80" text="Late" />
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- ================= BOTTOM ================= -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #EED9C4;                      -fx-padding: 10 16;">
            <Label style="-fx-text-fill: #6B7280;" text="Check-in based on real-time system" />
        </HBox>
    </bottom>

</BorderPane>
