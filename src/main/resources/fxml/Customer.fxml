<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="510.0" prefWidth="675.0" style="-fx-background-color: #F6EFE6;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CustomerController">

   <children>

      <!-- TITLE -->
      <Label layoutX="40.0" layoutY="22.0" style="-fx-text-fill:#3E2B1F; -fx-font-weight:900;" text="Customer">
         <font>
            <Font size="34.0" />
         </font>
      </Label>

      <Label layoutX="42.0" layoutY="62.0" style="-fx-text-fill:#7A6A5E; -fx-font-size:12px;" text="Manage customer information" />

      <!-- CARD CONTAINER -->
      <VBox fx:id="customerFill" layoutX="40.0" layoutY="100.0" prefHeight="330.0" prefWidth="595.0" spacing="12" style="-fx-background-color: rgba(255,255,255,0.92);                    -fx-background-radius: 18;                    -fx-border-radius: 18;                    -fx-border-color: rgba(62,43,31,0.12);                    -fx-border-width: 1;">
         <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
         </padding>

         <effect>
            <DropShadow color="#00000029" offsetY="6" radius="18" spread="0.06" />
         </effect>

         <!-- Row: ID -->
         <HBox alignment="CENTER_LEFT" spacing="14">
            <Label prefWidth="170" style="-fx-text-fill:#5B4B40; -fx-font-weight:700;" text="ID" />
            <Label fx:id="cusID" style="-fx-text-fill:#3E2B1F; -fx-font-weight:800;                           -fx-background-color: rgba(139,94,60,0.10);                           -fx-padding: 6 10 6 10;                           -fx-background-radius: 10;" text="Auto" />
         </HBox>

         <Region prefHeight="4" />

         <!-- Row: Name -->
         <HBox alignment="CENTER_LEFT" spacing="14">
            <Label prefWidth="170" style="-fx-text-fill:#5B4B40; -fx-font-weight:700;" text="Name" />
            <TextField fx:id="cusName" promptText="Enter customer name" style="-fx-background-radius:12;                               -fx-border-radius:12;                               -fx-border-color: rgba(62,43,31,0.16);                               -fx-border-width: 1;                               -fx-padding: 0 12 0 12;                               -fx-pref-height: 38;" HBox.hgrow="ALWAYS" />
         </HBox>

         <!-- Row: Phone -->
         <HBox alignment="CENTER_LEFT" spacing="14">
            <Label prefWidth="170" style="-fx-text-fill:#5B4B40; -fx-font-weight:700;" text="Phone" />
            <TextField fx:id="cusPhone" promptText="e.g. 09xxxxxxxx" style="-fx-background-radius:12;                               -fx-border-radius:12;                               -fx-border-color: rgba(62,43,31,0.16);                               -fx-border-width: 1;                               -fx-padding: 0 12 0 12;                               -fx-pref-height: 38;" HBox.hgrow="ALWAYS" />
         </HBox>

         <!-- Row: Address -->
         <HBox alignment="CENTER_LEFT" spacing="14">
            <Label prefWidth="170" style="-fx-text-fill:#5B4B40; -fx-font-weight:700;" text="Address" />
            <TextField fx:id="cusAddress" promptText="Enter address" style="-fx-background-radius:12;                               -fx-border-radius:12;                               -fx-border-color: rgba(62,43,31,0.16);                               -fx-border-width: 1;                               -fx-padding: 0 12 0 12;                               -fx-pref-height: 38;" HBox.hgrow="ALWAYS" />
         </HBox>

         <!-- Row: Email -->
         <HBox alignment="CENTER_LEFT" spacing="14">
            <Label prefWidth="170" style="-fx-text-fill:#5B4B40; -fx-font-weight:700;" text="Email" />
            <TextField fx:id="cusEmail" promptText="example@email.com" style="-fx-background-radius:12;                               -fx-border-radius:12;                               -fx-border-color: rgba(62,43,31,0.16);                               -fx-border-width: 1;                               -fx-padding: 0 12 0 12;                               -fx-pref-height: 38;" HBox.hgrow="ALWAYS" />
         </HBox>

         <!-- Row: Gender -->
         <HBox alignment="CENTER_LEFT" spacing="14">
            <Label prefWidth="170" style="-fx-text-fill:#5B4B40; -fx-font-weight:700;" text="Gender" />

            <HBox alignment="CENTER_LEFT" spacing="18">
               <RadioButton fx:id="genderMale" mnemonicParsing="false" style="-fx-text-fill:#3E2B1F; -fx-font-weight:700;" text="Male">
                  <toggleGroup>
                     <ToggleGroup fx:id="genderGroup" />
                  </toggleGroup>
               </RadioButton>

               <RadioButton fx:id="genderFemale" mnemonicParsing="false" style="-fx-text-fill:#3E2B1F; -fx-font-weight:700;" text="Female" toggleGroup="$genderGroup" />
            </HBox>
         </HBox>

         <!-- Row: DOB -->
         <HBox alignment="CENTER_LEFT" spacing="14">
            <Label prefWidth="170" style="-fx-text-fill:#5B4B40; -fx-font-weight:700;" text="Date of Birth" />
            <DatePicker fx:id="cusDOB" style="-fx-background-radius:12;                                -fx-border-radius:12;                                -fx-border-color: rgba(62,43,31,0.16);                                -fx-border-width: 1;                                -fx-pref-height: 38;" HBox.hgrow="ALWAYS" />
         </HBox>

      </VBox>

      <!-- ACTION BUTTONS -->
      <HBox alignment="CENTER_RIGHT" layoutX="40.0" layoutY="450.0" prefWidth="595.0" spacing="12">

         <Button fx:id="cusBack" mnemonicParsing="false" style="-fx-background-color: rgba(139,94,60,0.12);                         -fx-text-fill:#3E2B1F;                         -fx-font-weight:800;                         -fx-background-radius: 12;                         -fx-padding: 10 18 10 18;                         -fx-cursor: hand;" text="Back" />

         <Button fx:id="cusSave" mnemonicParsing="false" style="-fx-background-color: linear-gradient(to right, #8B5E3C, #A47148);                         -fx-text-fill:white;                         -fx-font-weight:900;                         -fx-background-radius: 12;                         -fx-padding: 10 22 10 22;                         -fx-cursor: hand;" text="Save" />

      </HBox>

   </children>
</AnchorPane>
