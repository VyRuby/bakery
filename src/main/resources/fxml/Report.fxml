<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="1000" style="-fx-background-color:#F6EFE6;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ReportController">

    <children>
        <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background:#F6EFE6;" AnchorPane.bottomAnchor="12" AnchorPane.leftAnchor="12" AnchorPane.rightAnchor="12" AnchorPane.topAnchor="12">

            <content>
                <VBox minWidth="980" prefWidth="980" spacing="12" style="-fx-background-color:#F6EFE6;">

                    <!-- TOP BAR -->
                    <HBox alignment="CENTER_LEFT" spacing="12" style="-fx-background-color: rgba(255,255,255,0.92);                                  -fx-background-radius: 16;                                  -fx-border-radius: 16;                                  -fx-border-color: rgba(62,43,31,0.12);                                  -fx-border-width: 1;                                  -fx-padding: 10 12;">
                        <Label style="-fx-font-size:16; -fx-font-weight:900; -fx-text-fill:#3E2B1F;" text="Dashboard" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnBack" onAction="#goBack" prefHeight="30" style="-fx-background-color: rgba(139,94,60,0.12);                                        -fx-text-fill: #3E2B1F;                                        -fx-font-weight: 900;                                        -fx-background-radius: 12;                                        -fx-padding: 0 12 0 12;                                        -fx-cursor: hand;" text="Back" />
                    </HBox>

                    <!-- CONTENT -->
                    <HBox spacing="12">

                        <!-- LEFT MAIN -->
                        <VBox spacing="12" HBox.hgrow="ALWAYS">

                            <!-- TOP ROW -->
                            <HBox spacing="12">

                                <!-- REVENUE -->
                                <VBox prefWidth="350" spacing="8" style="-fx-background-color: rgba(255,255,255,0.92);                                              -fx-background-radius: 16;                                              -fx-border-radius: 16;                                              -fx-border-color: rgba(62,43,31,0.12);                                              -fx-border-width: 1;                                              -fx-padding: 12;">

                                    <HBox alignment="CENTER_LEFT">
                                        <Label style="-fx-font-size:13; -fx-font-weight:900; -fx-text-fill:#3E2B1F;" text="Total Revenue" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Label style="-fx-font-size:10; -fx-font-weight:800; -fx-text-fill:#7A6A5E;" text="This month" />
                                    </HBox>
                                    <ProgressIndicator fx:id="revenueProgress" managed="false" visible="false" />

                                    <Label fx:id="lbRevenue" style="-fx-font-size:24; -fx-font-weight:900; -fx-text-fill:#3E2B1F;" text="0 VND" />

                                    <ProgressBar prefHeight="10" progress="0.72" style="-fx-accent:#8B5E3C; -fx-background-radius: 999; -fx-border-radius: 999;" />
                                </VBox>

                                <!-- GROWTH -->
                                <VBox spacing="8" style="-fx-background-color: rgba(255,255,255,0.92);                                              -fx-background-radius: 16;                                              -fx-border-radius: 16;                                              -fx-border-color: rgba(62,43,31,0.12);                                              -fx-border-width: 1;                                              -fx-padding: 12;" HBox.hgrow="ALWAYS">
                                    <HBox alignment="CENTER_LEFT">
                                        <Label style="-fx-font-size:13; -fx-font-weight:900; -fx-text-fill:#3E2B1F;" text="Weekly Growth" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Label style="-fx-font-size:10; -fx-font-weight:800; -fx-text-fill:#7A6A5E;" text="Weekly" />
                                    </HBox>

                                    <LineChart fx:id="chartGrowth" animated="false" createSymbols="false" minHeight="160" prefHeight="180" style="-fx-background-color: transparent;">
                                        <xAxis>
                                            <CategoryAxis />
                                        </xAxis>
                                        <yAxis>
                                            <NumberAxis />
                                        </yAxis>
                                    </LineChart>
                                </VBox>

                            </HBox>

                            <!-- BOTTOM SUMMARY -->
                            <VBox minHeight="210" prefHeight="240" spacing="8" style="-fx-background-color: rgba(255,255,255,0.92);                                          -fx-background-radius: 16;                                          -fx-border-radius: 16;                                          -fx-border-color: rgba(62,43,31,0.12);                                          -fx-border-width: 1;                                          -fx-padding: 12;">
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <Label style="-fx-font-size:14; -fx-font-weight:900; -fx-text-fill:#3E2B1F;" text="Summary" />
                                    <Region HBox.hgrow="ALWAYS" />
                                    <Label style="-fx-font-size:10; -fx-font-weight:800; -fx-text-fill:#7A6A5E;" text="By month" />
                                </HBox>

                                <BarChart fx:id="chartBottom" animated="false" minHeight="200" prefHeight="220.0" style="-fx-background-color: transparent;">
                                    <xAxis>
                                        <CategoryAxis />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis />
                                    </yAxis>
                                </BarChart>
                            </VBox>

                        </VBox>

                       <!-- RIGHT SIDEBAR -->
                        <VBox maxWidth="340" minWidth="300" prefWidth="320" spacing="12">


                         

                           <!-- TOP PRODUCTS -->
                    <VBox spacing="10"
                          style="-fx-background-color: rgba(255,255,255,0.92);
                                 -fx-background-radius: 16;
                                 -fx-border-radius: 16;
                                 -fx-border-color: rgba(62,43,31,0.12);
                                 -fx-border-width: 1;
                                 -fx-padding: 14;">

                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <Label style="-fx-font-size:14; -fx-font-weight:900; -fx-text-fill:#3E2B1F;"
                                   text="Top Products" />
                            <Region HBox.hgrow="ALWAYS" />
                            <ComboBox fx:id="cbTopMode" prefWidth="110" promptText="Month / Quarter" />
                        </HBox>

                        <ComboBox fx:id="cbTopPeriod" promptText="Choose period..." />

                        <!-- PIE CHART  -->
                        <PieChart fx:id="pieTopProducts"
                                  prefHeight="300"
                                  minHeight="260"
                                  labelsVisible="true"
                                  legendVisible="true"
                                  VBox.vgrow="ALWAYS"
                                  style="-fx-padding: 10;" />
                    </VBox>


                        </VBox>

                    </HBox>

                </VBox>
            </content>

        </ScrollPane>
    </children>
</AnchorPane>
