<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="750" prefWidth="1300" style="-fx-background-color:#F6EFE6;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ReportController">

    <children>

        <!-- MAIN WRAPPER -->
        <VBox spacing="16" AnchorPane.bottomAnchor="18" AnchorPane.leftAnchor="18" AnchorPane.rightAnchor="18" AnchorPane.topAnchor="18">

            <!-- TOP BAR (search + user + back) -->
            <HBox alignment="CENTER_LEFT" spacing="12" style="-fx-background-color: rgba(255,255,255,0.92);                          -fx-background-radius: 18;                          -fx-border-radius: 18;                          -fx-border-color: rgba(62,43,31,0.12);                          -fx-border-width: 1;                          -fx-padding: 12 14;">
                <Label style="-fx-font-size:18; -fx-font-weight:900; -fx-text-fill:#3E2B1F;" text="Dashboard" />

                <Region HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: rgba(139,94,60,0.08);                              -fx-background-radius: 14;                              -fx-padding: 8 10;">
                    <Label style="-fx-font-size:12; -fx-font-weight:800; -fx-text-fill:#7A6A5E;" text="Search" />
                    <TextField prefHeight="34" prefWidth="360" promptText="Search report..." style="-fx-background-radius: 12;                                       -fx-border-radius: 12;                                       -fx-border-color: rgba(62,43,31,0.16);                                       -fx-border-width: 1;                                       -fx-padding: 0 12 0 12;" />
                </HBox>

                <Region HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Label style="-fx-font-size:12; -fx-font-weight:900; -fx-text-fill:#3E2B1F;" text="Staff" />
                    <Button fx:id="btnBack" onAction="#goBack" prefHeight="34" style="-fx-background-color: rgba(139,94,60,0.12);                                    -fx-text-fill: #3E2B1F;                                    -fx-font-weight: 900;                                    -fx-background-radius: 12;                                    -fx-padding: 0 14 0 14;                                    -fx-cursor: hand;" text="Back" />
                </HBox>
            </HBox>

            <!-- CONTENT ROW: left main + right sidebar -->
            <HBox spacing="16" VBox.vgrow="ALWAYS">

                <!-- LEFT MAIN -->
                <VBox spacing="16" HBox.hgrow="ALWAYS">

                    <!-- TOP CARDS -->
                    <HBox spacing="16">

                        <!-- TOTAL REVENUE CARD -->
                        <VBox prefWidth="420" spacing="10" style="-fx-background-color: rgba(255,255,255,0.92);                                      -fx-background-radius: 18;                                      -fx-border-radius: 18;                                      -fx-border-color: rgba(62,43,31,0.12);                                      -fx-border-width: 1;                                      -fx-padding: 16;">
                            <HBox alignment="CENTER_LEFT">
                                <Label style="-fx-font-size:14; -fx-font-weight:900; -fx-text-fill:#3E2B1F;" text="Total Revenue" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Label style="-fx-font-size:11; -fx-font-weight:800; -fx-text-fill:#7A6A5E;" text="This month" />
                            </HBox>

                            <StackPane prefHeight="210">
                                <ProgressIndicator fx:id="revenueProgress" prefHeight="180" prefWidth="180" progress="0.0" style="-fx-progress-color:#8B5E3C;" />

                                <VBox alignment="CENTER" spacing="2">
                                    <Label fx:id="lbRevenue" style="-fx-font-size:26; -fx-font-weight:900; -fx-text-fill:#3E2B1F;" text="" />
                                    <Label style="-fx-font-size:11; -fx-text-fill:#7A6A5E;" text="Total" />
                                </VBox>
                            </StackPane>
                        </VBox>

                        <!-- GROWTH CARD -->
                        <VBox prefWidth="520" spacing="10" style="-fx-background-color: rgba(255,255,255,0.92);                                      -fx-background-radius: 18;                                      -fx-border-radius: 18;                                      -fx-border-color: rgba(62,43,31,0.12);                                      -fx-border-width: 1;                                      -fx-padding: 16;">
                            <HBox alignment="CENTER_LEFT">
                                <Label style="-fx-font-size:14; -fx-font-weight:900; -fx-text-fill:#3E2B1F;" text="Growth Orientation" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Label style="-fx-font-size:11; -fx-font-weight:800; -fx-text-fill:#7A6A5E;" text="Weekly" />
                            </HBox>

                            <LineChart fx:id="chartGrowth" animated="false" createSymbols="true" style="-fx-background-color: transparent;">
                                <xAxis>
                                    <CategoryAxis />
                                </xAxis>
                                <yAxis>
                                    <NumberAxis />
                                </yAxis>
                            </LineChart>
                        </VBox>

                    </HBox>

                    <!-- BIG CHART CARD (Summary style) -->
                    <VBox spacing="10" style="-fx-background-color: rgba(255,255,255,0.92);                                  -fx-background-radius: 18;                                  -fx-border-radius: 18;                                  -fx-border-color: rgba(62,43,31,0.12);                                  -fx-border-width: 1;                                  -fx-padding: 16;" VBox.vgrow="ALWAYS">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label style="-fx-font-size:16; -fx-font-weight:900; -fx-text-fill:#3E2B1F;" text="Summary" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Label style="-fx-font-size:11; -fx-font-weight:800; -fx-text-fill:#7A6A5E;" text="By month" />
                        </HBox>

                        <BarChart fx:id="chartBottom" animated="false" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                            <xAxis>
                                <CategoryAxis />
                            </xAxis>
                            <yAxis>
                                <NumberAxis />
                            </yAxis>
                        </BarChart>
                    </VBox>

                </VBox>

                <!-- RIGHT SIDEBAR (cards like sample) -->
                <VBox prefWidth="320" spacing="16">

                    <!-- Top Image Card -->
                    <VBox spacing="10" style="-fx-background-color: rgba(255,255,255,0.92);                                  -fx-background-radius: 18;                                  -fx-border-radius: 18;                                  -fx-border-color: rgba(62,43,31,0.12);                                  -fx-border-width: 1;                                  -fx-padding: 12;">
                        <Label style="-fx-font-size:14; -fx-font-weight:900; -fx-text-fill:#3E2B1F;" text="Highlights" />
                        <ImageView fx:id="imgTop" fitHeight="220" fitWidth="296" preserveRatio="true" smooth="true">
                            <image>
                                <!-- giữ đúng như bạn đang dùng -->
                                <Image url="@../image/bg.jpg" />
                            </image>
                        </ImageView>
                    </VBox>

                    <!-- Bottom Promo Card -->
                    <VBox spacing="10" style="-fx-background-color: rgba(139,94,60,0.92);                                  -fx-background-radius: 18;                                  -fx-padding: 14;" VBox.vgrow="ALWAYS">
                        <HBox alignment="CENTER_LEFT">
                            <Label style="-fx-font-size:14; -fx-font-weight:900; -fx-text-fill: white;" text="Bakery Insight" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Label style="-fx-font-size:11; -fx-font-weight:800; -fx-text-fill: rgba(255,255,255,0.85);" text="Today" />
                        </HBox>

                        <ImageView fx:id="imgBottom" fitHeight="160" fitWidth="296" preserveRatio="true" smooth="true" />

                        <Label style="-fx-font-size:12; -fx-text-fill: rgba(255,255,255,0.90);" text="Gateauet Bakery specializes in freshly baked pastries and desserts.We focus on quality ingredients, daily freshness, and customer satisfaction." wrapText="true" />

                        <Button maxWidth="1.7976931348623157E308" style="-fx-background-color: rgba(255,255,255,0.18);                                        -fx-text-fill: white;                                        -fx-font-weight: 900;                                        -fx-background-radius: 12;                                        -fx-padding: 10 12;                                        -fx-cursor: hand;" text="View details" />
                    </VBox>

                </VBox>

            </HBox>
        </VBox>

    </children>
</AnchorPane>
