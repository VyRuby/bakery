<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="450.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.LoginController"
            style="-fx-background-color: #EED9C4;">

    <!-- TOP BAR -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="12"
              style="-fx-background-color: white; -fx-border-color: #E6E8EF; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets top="12" bottom="12" left="18" right="18"/>
            </padding>

            <ImageView fitHeight="40" preserveRatio="true">
                <image>
                    <Image url="@../image/logo.jpeg"/>
                </image>
            </ImageView>

            <VBox spacing="2">
                <Label text="Gateauet"
                       style="-fx-font-size:18px; -fx-font-weight:800;"/>
                <Label text="Login System"
                       style="-fx-font-size:12px; -fx-text-fill:#6B7280;"/>
            </VBox>

            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <!-- CENTER -->
    <center>
        <VBox alignment="CENTER">
            <VBox spacing="16" alignment="CENTER"
                  maxWidth="360"
                  style="-fx-background-color: white;
                         -fx-background-radius: 18;
                         -fx-border-radius: 18;">
                <padding>
                    <Insets top="28" bottom="28" left="28" right="28"/>
                </padding>

                <Label text="LOGIN"
                       style="-fx-font-size:22px; -fx-font-weight:800;"/>

                <TextField fx:id="txtUsername"
                           promptText="Username"
                           style="-fx-background-radius:10;"/>

                <PasswordField fx:id="txtPassword"
                               promptText="Password"
                               style="-fx-background-radius:10;"/>

                <Label fx:id="lblError"
                       text=""
                       style="-fx-text-fill: red; -fx-font-size:11px;"/>

                <Button text="LOGIN"
                        onAction="#onLogin"
                        maxWidth="Infinity"
                        prefHeight="38"
                        style="-fx-background-color:#8B5E3C;
                               -fx-text-fill:white;
                               -fx-font-weight:700;
                               -fx-background-radius:12;"/>

                <Label text="Login using bakery account"
                       style="-fx-font-size:11px; -fx-text-fill:#6B7280;"/>
            </VBox>
        </VBox>
    </center>

    <!-- BOTTOM -->
    <bottom>
        <HBox alignment="CENTER"
              style="-fx-background-color: white; -fx-border-color:#E6E8EF; -fx-border-width:1 0 0 0;">
            <padding>
                <Insets top="10" bottom="10"/>
            </padding>
            <Label text="Â© 2026 Gateauet Bakery System"
                   style="-fx-font-size:11px; -fx-text-fill:#6B7280;"/>
        </HBox>
    </bottom>

</BorderPane>
